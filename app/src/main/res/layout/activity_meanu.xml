<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Meanu">

    <!-- ================= TOP BAR ================= -->

    <FrameLayout
        android:id="@+id/topBarContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp">

        <!-- Background Image -->
        <ImageView
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:src="@drawable/top_bar"
            android:scaleType="fitXY" />

        <!-- Overlay text slots -->
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="10dp">

            <!-- HEARTS -->
            <TextView
                android:id="@+id/tvHearts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- COINS -->
            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- GOLD BARS -->
            <TextView
                android:id="@+id/tvGoldBars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>


    <!-- ================= TOP MENU BUTTONS ================= -->

    <LinearLayout
        android:id="@+id/topMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBarContainer"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <ImageButton
            android:id="@+id/meanu_btnspin"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/spinner_btn" />

        <ImageButton
            android:id="@+id/meanu_btnmission"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/missionchest_btn" />

        <ImageButton
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/shop_btn" />

        <ImageButton
            android:id="@+id/btnWatchAdHeart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/watchadforheart_btn" />
    </LinearLayout>

    <!-- ================= BOTTOM NAV ================= -->

    <LinearLayout
        android:id="@+id/navLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/previous_btn" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/next_btn" />
    </LinearLayout>

    <!-- ================= GRID ================= -->

    <GridView
        android:gravity="center"
        android:id="@+id/gridLevels"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topMenuLayout"
        android:layout_above="@id/navLayout"
        android:numColumns="2"
        android:padding="16dp"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="25dp"
        android:clipToPadding="false" />

</RelativeLayout>
