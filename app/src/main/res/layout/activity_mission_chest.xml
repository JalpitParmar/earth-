<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/level_bg_1"
    android:padding="24dp">
<ImageView
    android:layout_width="250dp"
    android:layout_height="80dp"
    android:background="@drawable/missionchest_banner"/>
    <ImageView
        android:id="@+id/imgChest"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/bronze_chest_closed"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:id="@+id/name"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

    <TextView
        android:fontFamily="@font/titan_one"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:background="@drawable/winstoday"
        android:id="@+id/tvProgress"
        android:text="Wins Today: 0 / 5"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp"
        android:layout_width="wrap_content"/>

    <ProgressBar
        android:progressBackgroundTint="#6FE3FF"
        android:background="@drawable/loading_bar_bg"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:max="5"
        android:progress="0"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:background="@drawable/open_btn"
        android:id="@+id/btnOpenChest"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="OPEN CHEST"
        android:enabled="false"/>

    <TextView
        android:fontFamily="@font/titan_one"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tvReward"
        android:text="Chest Locked ðŸ”’"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <include layout="@layout/view_reward_probabilities"/>
</ScrollView>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="8dp">
        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/back_btn" />
    </LinearLayout>
</LinearLayout>
