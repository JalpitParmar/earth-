<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop"
    android:orientation="vertical"
    android:background="@drawable/level_bg_1">
    <FrameLayout
        android:id="@+id/topBarContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp">

        <!-- Background Image -->
        <ImageView
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:src="@drawable/top_bar"
            android:scaleType="fitXY" />

        <!-- Overlay text slots -->
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="10dp">

            <!-- HEARTS -->
            <TextView
                android:fontFamily="@font/titan_one"
                android:id="@+id/tvHearts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- COINS -->
            <TextView
                android:fontFamily="@font/titan_one"
                android:id="@+id/tvCoins"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- GOLD BARS -->
            <TextView
                android:fontFamily="@font/titan_one"
                android:id="@+id/tvGoldBars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/topBarContainerforbooster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="top">

        <!-- Background Image -->
        <ImageView
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:src="@drawable/boosterbar"
            android:scaleType="fitXY" />

        <!-- Overlay counts -->
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="6dp">

            <!-- HAMMER -->
            <TextView
                android:fontFamily="@font/titan_one"
                android:id="@+id/tvHammer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- BOMB -->
            <TextView
                android:fontFamily="@font/titan_one"
                android:id="@+id/tvBomb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- SHUFFLE -->
            <TextView
                android:fontFamily="@font/titan_one"
                android:id="@+id/tvSwap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- COLOR BOMB -->
            <TextView
                android:fontFamily="@font/titan_one"
                android:id="@+id/tvColorBomb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/shop_baaner"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnBuyBomb"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/bomb_btn"/>

        <ImageButton
            android:id="@+id/btnBuyHammer"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/hammer_btn"/>

        <ImageButton
            android:id="@+id/btnBuyBombHammerCombo"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/hb_combo_btn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnBuySwap"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/swap_btn"/>

        <ImageButton
            android:id="@+id/btnBuyColorBomb"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/colorboomb_btn"/>

        <ImageButton
            android:id="@+id/btnBuySwapColorBombCombo"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/sc_combo_btn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnBuyHeart"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/heart_btn"/>

        <ImageButton
            android:id="@+id/btnAddCoins"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/coin_btn"/>

        <ImageButton
            android:id="@+id/btnBuyGoldBar"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/goldbar_btn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="8dp">
        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/back_btn" />
    </LinearLayout>
</LinearLayout>